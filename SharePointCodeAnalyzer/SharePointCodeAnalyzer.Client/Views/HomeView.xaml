<UserControl x:Class="SharePointCodeAnalyzer.Client.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:SharePointCodeAnalyzer.CommonControls.Controls;assembly=SharePointCodeAnalyzer.CommonControls"
             HorizontalContentAlignment="Stretch"
             VerticalContentAlignment="Stretch">

    <Grid>
            <controls:FadingListView ItemTemplate="{StaticResource StatusBarComponentItemTemplate}"
                                 ItemsSource="{Binding MenuBlocks}"
                                 Style="{StaticResource StandardListView}"
                                 ItemContainerStyle="{StaticResource AppBarItemStyle}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </controls:FadingListView>
            
    </Grid>
</UserControl>
